<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <EditText
        android:id="@+id/data_lembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:hint="Data desejada"
        android:inputType="date" />



    <EditText
        android:id="@+id/hora_lembrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="Hora desejada"
        android:inputType="time" />

    <Button
        android:text="Selecionar Livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_selecionar" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_salvar_lembrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="#6F8F99"
            android:text="Salvar"
            android:textColor="#A82A77" />

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="7dp"
            android:layout_weight="1"
            android:background="#6F8F99"
            android:text="Voltar"
            android:textColor="#A82A77" />

    </LinearLayout>
</LinearLayout>