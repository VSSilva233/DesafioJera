<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_livro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/livro"/>

    <TextView
        android:id="@+id/nome_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/img_livro"
        android:hint="Nome"
        android:padding="3dp"/>

    <TextView
        android:id="@+id/qtd_pagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome_livro"
        android:layout_marginTop="4dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/img_livro"
        android:layout_toEndOf="@+id/nome_livro"
        android:hint="Paginas"
        android:padding="3dp"
        />

</RelativeLayout>